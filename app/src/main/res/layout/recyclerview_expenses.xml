<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_expenses_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card">

        <TextView
            android:id="@+id/card_expenses_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="304dp"
            android:layout_marginRight="304dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Yesterday"
            android:textColor="#000000"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="end" />

        <ImageView
            android:id="@+id/card_expenses_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintLeft_toLeftOf="@id/card_expenses_day"
            app:layout_constraintRight_toRightOf="@id/card_expenses_day"
            app:layout_constraintTop_toBottomOf="@id/card_expenses_day" />

        <TextView
            android:id="@+id/card_expenses_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Food"
            android:textColor="#000000"
            android:textSize="13dp"
            app:layout_constraintLeft_toLeftOf="@id/card_expenses_image"
            app:layout_constraintTop_toBottomOf="@id/card_expenses_image" />

        <TextView
            android:id="@+id/card_expenses_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="-230.00"
            android:textColor="#FD1313"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/card_expenses_day" />

        <TextView
            android:id="@+id/card_expenses_income_or_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Expense"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/card_expenses_amount"
            app:layout_constraintRight_toRightOf="@+id/card_expenses_amount"
            app:layout_constraintTop_toBottomOf="@id/card_expenses_amount"
            app:layout_constraintVertical_bias="0.333" />

        <TextView
            android:id="@+id/card_expenses_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="308dp"
            android:layout_marginLeft="308dp"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/roboto_medium"
            android:text="1080.00"
            android:textColor="#1AA972"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/card_expenses_amount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Amount"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/card_expenses_total"
            app:layout_constraintTop_toBottomOf="@id/card_expenses_total"
            app:layout_constraintVertical_bias="0.361" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
